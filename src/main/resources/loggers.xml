<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="eventLogger" class="com.yet.spring.core.loggers.ConsoleEventLogger"/>

    <bean id="fEventLogger" class="com.yet.spring.core.loggers.FileEventLogger" init-method="init">
        <constructor-arg index="0" value="./output.txt"/>
    </bean>

    <bean id="cfEventLogger" class="com.yet.spring.core.loggers.CacheFileEventLogger" parent="fEventLogger"
          init-method="init" destroy-method="destroy">
        <constructor-arg index="0" value="./cacheOutput.txt"/>
        <constructor-arg index="1" value="4"/>
    </bean>

    <bean id="combinedLogger" class="com.yet.spring.core.loggers.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="eventLogger"/>
                <ref bean="fEventLogger"/>
            </list>
        </constructor-arg>
    </bean>
</beans>
